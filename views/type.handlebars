	<div class="type-header">
    <img src="/css/assets/tee1.jpg">
    <div class="typehead">
        <h1>Types Of Products</h1>
        <p>Add Products On This Page</p>
    </div>
</div>
<div id="type-body">
    <div class="message-section">
        {{#if success_msg}}
        <span id="message-section">
            {{this.success_msg}}
        </span>
        {{/if}}
        {{#if error}}
        <span id="error-section">
            {{this.error}}
        </span>
        {{/if}}
    </div>
    <div class="create-section">
        <form action="/type/add" method="post">
         <div class="form-group">
             <input type="text" name="name" id="" placeholder="Name" class="form-control">
         </div>
         <div class="form-group">
             <button type="submit" class="btn-primary">Create</button>
         </div>
        </form>
    </div>
    <div class="update-section">
        <form action="/type/update" method="post" id="update-section">
            <div class="form-group">
                <input type="number" name="updateid" id="updateid" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="updatename" id="updatename" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
<div id="table-section">
    <table id="type-table">
        <caption id="table-title">Type table</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each types}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td><button onclick="getTypeById({{this.id}})" class="btn-alert">Edit</button></td>
                <td><button onclick="deleteType({{this.id}});" class="btn-danger">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>